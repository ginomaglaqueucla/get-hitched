 <div class="dashboard-page">
    {{#if engaged}}
    
        <div class="row">
            <div class="col-4 dashboard-nav-div">
                <div class="profile-pic-div">
                    <img src="#" />
                    {{#each couple}}
                    <h5>{{partner1_name}} &</br>
                    {{partner2_name}}</h5>
                </div>

                <div class="nav-btns-div">
                    <button class="dashboard-nav-btn btn">My Wedding</button>
                    <button class="dashboard-nav-btn btn">Guest List</button>
                    <button class="dashboard-nav-btn btn">Slide Show</button>
                </div>
            </div>

            <div class="col-8 dashboard">
                <div class="dashboard-title-div">
                    <div class="dashboard-title">
                        <h2>My Wedding</h2>
                    </div>

                    <div class="dashboard-subtitle">
                        {{!-- Is there a better way to destructure our data object? --}}
                        
                        <h4>{{wedding.wedding_hashtag}}</h5>
                    </div> 
                </div>

                <div class="dashboard-widget">

                    </div class="my-wedding-info-widget-info">
                        <h4>{{wedding.wedding_date}}</h4> </br>
                        <h4>{{wedding.wedding_location}}</h4> </br>
                        <h5>{{wedding.wedding_details}}</h5>
                        {{/each}}
                        <button class="dashboard-nav-btn btn">Edit My Wedding</button>
                    </div>
                    
                    
                    {{!-- possibly include another widget for weather?--}}
                </div>
            </div>

            <div class="col-8 dashboard">
                <div class="dashboard-title">
                    <h2>Guest List</h2> </br>
                </div>

                <div class="dashboard-widget">
                    <h3>{{guestlist}}</h3>
                </div>
            </div>

            <div class="col-8 dashboard">
                <div class="dashboard-title">
                    <h2>Slide Show</h2> </br>
                </div>

                <div class="dashboard-widget">
                    {{! import slide show here }}
                </div>
            </div>
        </div>
    {{/if}}

    {{#unless engaged}}
        <div class="row">
            <div class="col-4 dashboard-nav-div">
                <div class="profile-pic-div">
                    <img src="#" />
                    {{#each user}}
                    <h5>{{full_name}}</h5>
                    {{/each}}
                </div>

                <div class="nav-btns-div">
                    <button class="dashboard-nav-btn btn">Your Weddings</button>
                    <button class="dashboard-nav-btn btn">Invites</button>
                    <button class="dashboard-nav-btn btn">Slide Shows</button>
                </div>
            </div>

            <div class="col-8 dashboard">
                <div class="dashboard-title">
                    <h2>Your Weddings</h2>
                </div>

                </div class="dashboard-widget">
                    {{!-- add names and wedding ids to this info --}}
                    {{#each user.wedding_id}}
                        <h3>Date: {{wedding.wedding_date}}</h3> </br>
                        <h3>Location: {{wedding.wedding_location}}</h3>
                        <h3>Wedding Details: {{wedding.wedding_details}}</h3>
                    {{/each}}
                    {{!-- possibly include map in widget? --}}
                </div>
            </div>

            <div class="col-8 dashboard">
                <div class="dashboard-title">
                    <h2>Invites</h2> </br>
                </div>

                <div class="dashboard-widget">
                    {{! import invites here }}
                </div>
            </div>

            <div class="col-8 dashboard">
                <div class="dashboard-title">
                    <h2>Slide Shows</h2> </br>
                </div>

                <div class="dashboard-widget">
                    {{! import slide shows here }}
                </div>
            </div>
        </div>
    {{/unless}}
</div>

<script src="/javascript/dashboard.js"></script>