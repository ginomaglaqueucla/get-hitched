<div class="gallery-wrapper" id="">
    <div class="gallery-div">

        {{!-- the header for the gallery  --}}
        <div class="row">
            <div class="col-12 gallery-header">
                <div>
                    <h3>Wedding Gallery</h3> 
                    <small class="text-muted">Here is where you can find all of the wedding memories.</small>
                </div>
                <div>
                    <h3>Upload Page</h3>
                    <small class="text-muted">The link below will take you to the upload page where you can add memories to this gallery.</small>
                    <br /><a class="btn upload-btn " href="/gallery/upload">Upload Page <i class="fas fa-file-upload"></i></a>
                </div>
            </div>
        </div>

        {{!-- the gallery itself  --}}
        <div class="row" id="gallery" data-toggle="modal" data-target="#exampleModal">
            {{#each galleryImages}}
                {{#with this}}
                <div class="col-4">
                    <div class="gallery-img-wrapper">
                        <img class="gallery-img" src="{{url}}"  data-target="#carouselExample" data-slide-to="{{@index}}" />
                    </div>
                </div>
                {{/with}}
            {{/each}}
        </div>


        <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h4 class="modal-title">Gallery Image</h4>
                        
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">Ã—</span>
                        </button>
                    </div>
                    <div class="modal-body">

                        <div id="carouselExample" class="carousel slide" data-ride="carousel">
                            <div class="carousel-inner">
                                {{#each galleryImages}}
                                {{#with this}}
                                <div class="carousel-item {{#justOnePlease @index}}{{/justOnePlease}}">
                                <img class="d-block w-100" src="{{url}}">
                                </div>
                                {{/with}}
                                {{/each}}
                            </div>
                            <a class="carousel-control-prev" href="#carouselExample" role="button" data-slide="prev">
                                <span class="carousel-control-prev-icon carousel-control-bg" aria-hidden="true"></span>
                                <span class="sr-only">Previous</span>
                            </a>
                            <a class="carousel-control-next" href="#carouselExample" role="button" data-slide="next">
                                <span class="carousel-control-next-icon carousel-control-bg" aria-hidden="true"></span>
                                <span class="sr-only">Next</span>
                            </a>
                        </div>
                    </div>

                <div class="modal-footer">
                    <button type="button" class="btn gallerymodal-btn" data-dismiss="modal">Close</button>
                </div>

                </div>
            </div>
        </div>
    </div>
</div>

